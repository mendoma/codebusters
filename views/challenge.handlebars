<body class="challenges">
    <div class="container index">
        <div class="row">
            <div class="col s12">
                <div class="card grey darken-2">
                    <div class="card-content white-text">
                        <div class="typewriter">
                            <h1>Codebusters</h1>
                        </div>
                        <h6>{{data.question}}</h6>
                        <div class="row">
                            <form class="col s12">
                                <div class="row">
                                    <div class="input-field col s12">
                                        <i class="material-icons prefix">mode_edit</i>
                                        <textarea id="code" class="materialize-textarea"></textarea>
                                        <label for="code">Enter code here...</label>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="waves-effect btn black-text hoverable" href="#">Submit</button>
                        <a href="/game/{{gameId}}/challenge/{{data.next}}" class="waves-effect btn right black-text hoverable">Skip</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>